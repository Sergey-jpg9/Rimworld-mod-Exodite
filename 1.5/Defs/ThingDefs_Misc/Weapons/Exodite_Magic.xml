<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BaseWeapon">
    <defName>MagicStaff_Exodite</defName>
    <label>magic staff</label>
    <description>A magic staff that fires magic projectiles and increases the mage's psych heat. The magic damage depends on the magician's magical abilities.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponMelee/PsyfocusStaff</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<equippedAngleOffset>-65</equippedAngleOffset>
    <soundInteract>Bow_Large</soundInteract>
    <costList>
      <WoodLog>60</WoodLog>
    </costList>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <Mass>2.6</Mass>
      <AccuracyTouch>0.69</AccuracyTouch>
      <AccuracyShort>0.82</AccuracyShort>
      <AccuracyMedium>0.71</AccuracyMedium>
      <AccuracyLong>0.48</AccuracyLong>
      <RangedWeapon_Cooldown>2.0</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
	  <li>ExoditeMagic</li>
    </weaponTags>
    <weaponClasses>
      <li>MeleeBlunt</li>
      <li>Ultratech</li>
	  <li>Melee</li>
    </weaponClasses>
	<thingCategories>
      <li>WeaponsMelee</li>
    </thingCategories>
    <verbs>
      <li>
        <verbClass>Exodites.Verb_MagicShoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>MagicFireball_Exodite</defaultProjectile>
        <warmupTime>1.0</warmupTime>
        <range>27.9</range>
        <soundCast>Shot_ChargeRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
      </li>
    </verbs>
    <tools>
      <li>
        <label>head</label>
        <labelUsedInLogging>false</labelUsedInLogging>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
    </tools>
    <!--<recipeMaker>
      <researchPrerequisite>Greatbow</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <displayPriority>530</displayPriority>
	  <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
		<li>CraftingSpot</li>
      </recipeUsers>
      <effectWorking>Smelt</effectWorking>
      <soundWorking>Recipe_MakeBow</soundWorking>
      <unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
    </recipeMaker>-->
    <rotateInShelves>false</rotateInShelves>
	<techLevel>Neolithic</techLevel>
    <tradeTags>
      <li>ExoditeWeaponRanged</li>
    </tradeTags>
    <burnableByRecipe>true</burnableByRecipe>
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
	  <li Class="Exodites.CompProperties_HediffGiverOnEquip">
        <hediff>SynchronizeWeapon_Ranged</hediff>
		<partsToAffect>
			<li>Brain</li>
		</partsToAffect>
		<countToAffect>1</countToAffect>
      </li>
    </comps>
	<equippedStatOffsets>
      <ShootingAccuracyPawn>-2</ShootingAccuracyPawn>
    </equippedStatOffsets>
    <relicChance>1</relicChance>
  </ThingDef>
  
  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>MagicFireball_Exodite</defName>
    <label>fireball</label>
    <graphicData>
      <texPath>Things/Projectile/Charge_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>2.5</drawSize>
    </graphicData>
	<thingClass>Exodites.MagicBullet</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
      <damageAmountBase>10</damageAmountBase>
      <stoppingPower>1.0</stoppingPower>
      <armorPenetrationBase>0.20</armorPenetrationBase>
      <speed>56</speed>
	  <bulletChanceToStartFire>0.60</bulletChanceToStartFire>
	  <extraDamages>
		<li>
		  <def>Flame</def>
		  <amount>4</amount>
		  <armorPenetration>0</armorPenetration>
		  <chance>0.6</chance>
		</li>
	  </extraDamages>
    </projectile>
  </ThingDef>
</Defs>