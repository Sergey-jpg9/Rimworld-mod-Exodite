<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ApparelBase">
    <defName>Apparel_MagicRune</defName>
    <label>magic rune</label>
    <description>A pouch with magical runes that help the pawn store and dispel overheating.</description>
    <thingClass>Apparel</thingClass>
    <graphicData>
      <texPath>Runes/MagicRune</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <tickerType>Normal</tickerType>
    <techLevel>Medieval</techLevel>
    <statBases>
      <Mass>0.5</Mass>
	  <MarketValue>80</MarketValue>
      <WorkToMake>14000</WorkToMake>
      <Flammability>0.4</Flammability>
      <EquipDelay>2</EquipDelay>
	  <MaxHitPoints>30</MaxHitPoints>
    </statBases>
    <thingCategories>
      <li>ApparelUtility</li>
    </thingCategories>
    <apparel>
	  <tags>
        <li>MagicRune</li>
      </tags>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <careIfDamaged>false</careIfDamaged>
      <wearPerDay>0</wearPerDay>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
      <layers>
        <li>Belt</li>
      </layers>
      <developmentalStageFilter>Child, Adult</developmentalStageFilter>
    </apparel>
    <allowedArchonexusCount>1</allowedArchonexusCount>
	<equippedStatOffsets>
		<PsychicEntropyRecoveryRate>0.03</PsychicEntropyRecoveryRate>
		<PsychicEntropyMax>10</PsychicEntropyMax>
	</equippedStatOffsets>
	<comps>
	  <li Class="Exodites.CompProperties_MagicRune">
		<damagePerWork>6</damagePerWork>
	  </li>
	</comps>
	<tradeTags>
      <li>Exodite_Runes</li>
    </tradeTags>
	<smeltable>false</smeltable>
  </ThingDef>
  
