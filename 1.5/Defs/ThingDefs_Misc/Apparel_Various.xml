<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
  <ThingDef ParentName="ArmorMachineableBase">
    <defName>Apparel_ArmoredPants</defName>
    <label>armored pants</label>
    <description>Simple pants made of fabric or leather, to which many plates of psychoplastics are sewn, forming scales like a fish's. It provides good protection and does not restrict movement, but the strength strongly depends on the base, and the creation is laborious.</description>
    <recipeMaker>
      <researchPrerequisite>Tech_WraithboneArmor</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
      <displayPriority>220</displayPriority>
    </recipeMaker>
	<graphicData>
      <texPath>Pawn/Apparel/ArmoredPants/ArmoredPants</texPath>  <!-- Надо поменять текстуру -->
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
      <drawSize>0.9</drawSize>
    </graphicData>
	<statBases>
      <WorkToMake>13000</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>1.5</Mass>
      <Flammability>0.5</Flammability>
	  <MarketValue>250</MarketValue>
      <ArmorRating_Sharp>0.6</ArmorRating_Sharp>
	  <StuffEffectMultiplierArmor>0.06</StuffEffectMultiplierArmor>
      <ArmorRating_Blunt>0.32</ArmorRating_Blunt>
      <ArmorRating_Heat>0.27</ArmorRating_Heat>
      <StuffEffectMultiplierInsulation_Cold>0.20</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.08</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <!--<equippedStatOffsets>
      <MoveSpeed>-0.06</MoveSpeed>
    </equippedStatOffsets>-->
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
	<costStuffCount>40</costStuffCount>
	<costList>
      <PsybonePlates>60</PsybonePlates>
    </costList>
	<stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
	<apparel>
      <bodyPartGroups>
        <li>Legs</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
        <li>Middle</li>
      </layers>
      <tags>
        <li>ExoditeSpecialMilitaryApparel</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <only>(0.44,0.44,0.44)</only>
        </li>
        <li>
          <only>(0.62,0.62,0.62)</only>
        </li>
      </options>
    </colorGenerator>
    <tradeTags>
      <li>Exodite_Clothing</li>
      <li>Exodite_Armor</li>
    </tradeTags>
	<techLevel>Medieval</techLevel>
  </ThingDef>
  
  
